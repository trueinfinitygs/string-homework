int peopleInLine;
int appointmentTime = 10;
int waitingTimeAll;
int oneHourInMinutes = 60;
int minutesPerHour = 60;
Console.Write("Ведите колличество людей в очереди:");
peopleInLine = Convert.ToInt32(Console.ReadLine());
waitingTimeAll = peopleInLine * appointmentTime;
oneHourInMinutes = waitingTimeAll / oneHourInMinutes;
minutesPerHour = waitingTimeAll % minutesPerHour;
Console.Write("Время ожидания в череди: " + oneHourInMinutes + "часа " + minutesPerHour + " минут");
