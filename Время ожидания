int peopleInLine;
int appointmentTime = 10;
int waitingTimeAll;
int waitingHours = 60;
int minutesОfWaiting = 60;
Console.Write("Ведите колличество людей в очереди:");
peopleInLine = Convert.ToInt32(Console.ReadLine());
waitingTimeAll = peopleInLine * appointmentTime;
waitingHours = waitingTimeAll / waitingHours;
minutesОfWaiting = waitingTimeAll % minutesОfWaiting;
Console.Write("Время ожидания в череди: " + waitingHours + "часа " + minutesОfWaiting + " минут");
